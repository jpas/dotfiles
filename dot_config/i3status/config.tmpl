general {
  colors = true
  # gruvbox neutral_green
  color_good = "#98971a"
  # gruvbox neutral_yellow
  color_degraded = "#d79921"
  # gruvbox neutral_red
  color_bad = "#cc241d"

  interval = 5
  separator = " "
}

# order += "ipv6"
{{ if eq .machine_role "laptop" -}}
order += "wireless _first_"
{{- end -}}
order += "ethernet _first_"
{{ if eq .machine_role "laptop" -}}
order += "battery all"
{{- end -}}
order += "disk /"
order += "load"
order += "memory"
order += "tztime local"

wireless _first_ {
  format_up = "W: (%quality at %essid) %ip"
  format_down = "W: down"
}

ethernet _first_ {
  format_up = "E: %ip"
  format_down = "E: down"
}

battery all {
  format = "%status %percentage %remaining"
}

disk "/" {
  format = "%avail"
}

load {
  format = "%1min"
}

memory {
  format = "%used | %available"
  threshold_degraded = "1G"
  format_degraded = "MEMORY < %available"
}

tztime local {
  format = "%Y-%m-%d %H:%M:%S "
}
